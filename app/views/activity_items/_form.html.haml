= form_for(@activity_item) do |f|
  - if @activity_item.errors.any?
    #error_explanation
      %h2
        = pluralize(@activity_item.errors.count, "error")
        prohibited this activity_item from being saved:
      %ul
        - @activity_item.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :activity_id
    %br/
    = f.number_field :activity_id
  .field
    = f.label :volunteer_id
    %br/
    = f.number_field :volunteer_id
  .field
    = f.label :is_finish
    %br/
    = f.check_box :is_finish
  .field
    = f.label :remark
    %br/
    = f.text_area :remark
  .actions
    = f.submit
