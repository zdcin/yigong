= form_for(@group) do |f|
  - if @group.errors.any?
    #error_explanation
      %h2
        = pluralize(@group.errors.count, "error")
        prohibited this group from being saved:
      %ul
        - @group.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :remark
    %br/
    = f.text_area :remark
  .field
    = f.label :start_at
    %br/
    = f.date_select :start_at
  .field
    = f.label :finish_at
    %br/
    = f.date_select :finish_at
  .actions
    = f.submit
